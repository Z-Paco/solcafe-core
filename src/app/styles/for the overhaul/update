src/
└── app/
    └── styles/
        ├── globals.css           (keep existing file)
        ├── components/           (new folder)
        │   ├── buttons.css       (new file)
        │   ├── forms.css         (new file)
        │   ├── cards.css         (new file)
        │   ├── header.css        (move existing file)
        │   └── footer.css        (new file)
        ├── layouts/              (new folder)
        │   ├── dashboard.css     (move existing file)
        │   ├── profile.css       (move existing file)
        │   └── post-detail.css   (new file)
        ├── pages/                (new folder)
        │   ├── home.css          (move existing file)
        │   ├── auth.css          (new file)
        │   └── content/          (new folder)
        │       ├── art.css       (move existing file)
        │       ├── engineering.css (move existing file)
        │       └── news.css      (move existing file)
        └── templates/            (move existing folder if needed)

# Run these commands in your terminal
mkdir -p src/app/styles/components
mkdir -p src/app/styles/layouts
mkdir -p src/app/styles/pages/content


# Move header.css to components folder
move src\app\styles\header.css src\app\styles\components\

# Move content-specific CSS files
move src\app\styles\news.css src\app\styles\pages\content\
move src\app\styles\art.css src\app\styles\pages\content\
move src\app\styles\engineer.css src\app\styles\pages\content\

# Move layout files
move src\app\styles\dashboard.css src\app\styles\layouts\
move src\app\styles\profile.css src\app\styles\layouts\

# Make sure home.css is in the right place
if exist src\app\styles\home.css (
  move src\app\styles\home.css src\app\styles\pages\
)

Step 4 
/* Button Component Styles */

/* Base button styles */
.button,
.primary-button,
.secondary-button,
.button-link,
.create-button {
  display: inline-block;
  padding: 0.5rem 1rem;
  border-radius: 4px;
  font-weight: 500;
  text-align: center;
  cursor: pointer;
  transition: background-color 0.2s, color 0.2s, border-color 0.2s;
  text-decoration: none;
}

/* Primary button */
.primary-button {
  background-color: var(--primary-bg);
  color: var(--primary-text);
  border: none;
}

.primary-button:hover {
  background-color: var(--primary-bg-hover);
}

.primary-button:disabled {
  opacity: 0.6;
  cursor: not-allowed;
}

/* Secondary button */
.secondary-button {
  background-color: transparent;
  color: var(--secondary-text);
  border: 1px solid var(--card-border);
}

.secondary-button:hover {
  background-color: var(--secondary-bg-subtle);
  border-color: var(--secondary-text);
}

/* Link styled as button */
.button-link {
  background-color: var(--primary-bg);
  color: var(--primary-text);
  border: none;
}

.button-link:hover {
  background-color: var(--primary-bg-hover);
  text-decoration: none;
}

/* Create button (used on listing pages) */
.create-button {
  background-color: var(--primary-bg);
  color: var(--primary-text);
  padding: 0.5rem 1rem;
  border-radius: 4px;
  text-decoration: none;
  font-weight: 500;
}

.create-button:hover {
  background-color: var(--primary-bg-hover);
}

/* Action buttons (edit, delete, etc.) */
.edit-button,
.delete-button,
.back-button,
.fetch-button {
  display: inline-block;
  padding: 0.25rem 0.75rem;
